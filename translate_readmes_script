FILES_TO_CHECK = [
    "/Users/zhangxin/ctp-materials/test_materials/2K Flat SDR Black with Active Area/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/2K Flat SDR Black with Marks/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/2K Full SDR Black with Active Area/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/2K Full SDR Black with Marks/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/2K Scope SDR Black with Active Area/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/2K Scope SDR Black with Marks/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/4K Flat SDR Black with Active Area/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/4K Full SDR Black with Active Area/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/4K Full SDR Black with Marks/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/4K Scaling Test Patterns/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/4K Scope SDR Black with Active Area/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/4K Scope SDR Black with Marks/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/4K White Lines/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/Intra-Frame Contrast Sequence/README.md",
    "/Users/zhangxin/ctp-materials/test_materials/Sequential Contrast and Uniformity Sequence/README.md"
]

def translate_content(content):
    for eng, chn in TRANSLATIONS.items():
        content = content.replace(eng, chn)
    return content

def main():
    for file_path in FILES_TO_CHECK:
        if os.path.exists(file_path):
            with open(file_path, 'r', encoding='utf-8') as f:
                content = f.read()
            
            new_content = translate_content(content)
            
            if new_content != content:
                print(f"Translating {file_path}")
                with open(file_path, 'w', encoding='utf-8') as f:
                    f.write(new_content)
            else:
                print(f"No changes for {file_path}")

if __name__ == "__main__":
    main()
